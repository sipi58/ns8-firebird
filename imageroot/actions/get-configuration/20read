#
# Read configuration
#

import os
import sys
import json
import agent

# Prepare return variable
config = {}

# Read current configuration from the environment file
config["charset"] = os.getenv("FIREBIRD_DATABASE_DEFAULT_CHARSET","")
config["port"] = os.getenv("FIREBIRD_PORT","")
config["tz"] = os.getenv("FIREBIRD_TIMEZONE","")
config["ff"] = os.getenv("FIREBIRD_FIREWALL") == "True"

# Dump the configuration to stdout
json.dump(config, fp=sys.stdout)
