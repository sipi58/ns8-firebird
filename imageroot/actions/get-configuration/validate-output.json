{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Configure Firebird",
    "$id": "http://nethserver.org/json-schema/task/input/firebird/get-configuration",
    "description": "Get Firebird settings",
    "examples": [
        {
            "charset": "ISO-8859-2",
            "port": "3050",
            "tz": "Europe/Vienna"
        }
    ],
    "type": "object",
    "required": [
        "charset",
        "port",
        "tz",
        "ff"
    ],
    "properties": {
        "charset": {
            "type": "string",
            "description": "The charset used by Firebird"
        },
	"port": {
            "type": "string",
            "title": "Firebird port",
            "description": "The port used by Firebird"
        },
	"tz": {
            "type": "string",
            "title": "Firebird timezone",
            "description": "The timezone used by Firebird"
        },
	"ff": {
            "type": "string",
            "title": "Firebird firewall",
            "description": "Firebird port Enable/Disable on Firewall"
        }
    }
}
